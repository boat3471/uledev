#!/usr/bin/env node
var fs = require('fs');
var path = require('path');
var read = require('read');
var moment = require('moment');
var tools = require('./uledev-tools');
var username = process.env.username;

/* 创建进程ID记录文件 */
function createPidFile(){
	var jsonPath = path.join(__dirname, 'uledev-pid.json');
	if(fs.existsSync(jsonPath)) return;
	fs.writeFileSync(jsonPath, '0');
}

/* 配置个人偏好设置 */
function initPreference(){
	var uledevJson = require('./ule-conf/uledev.json');
	uledevJson.username = username;
	uledevJson.dir.uledev.root = __dirname;
	uledevJson.dir.uledev.conf = __dirname + '\\uledev-conf';
	uledevJson.dir.uledev.modules = __dirname + '\\ule-modules';
	uledevJson.dir.uledev.server = __dirname + '\\ule-server';
	uledevJson.installDate = moment().format('YYYY-MM-DD');
	uledevJson.hostsPath = 'C:/WINDOWS/System32/drivers/etc/hosts';
	uledevJson.hosts = [
		'i0.dev.ule.com',
		'i1.dev.ule.com',
		'i2.dev.ule.com',
		'www.dev.ule.com'
	];
	uledevJson.port = 80;
	uledevJson.css.type = 'gulp-stylus';

	tools.writeJsonFile(uledevJson, path.join(__dirname, 'ule-conf/uledev.json'));

	console.info('');
	console.info('★ 你好 ' + username + '！欢迎安装uledev开发环境\n');
	console.info('★ 安装目录: ' + uledevJson.dir.uledev.root);
	console.info('★ 配置目录: ' + uledevJson.dir.uledev.conf);
	console.info('★ 模块目录: ' + uledevJson.dir.uledev.modules);
	console.info('★ 服务目录: ' + uledevJson.dir.uledev.server + '\n');
	console.info('★ 安装完成！\n');
}

/* 提示输入用户名 */
function inputUserName(){
	read({prompt: '请输入你的名称: ', default: username}, function(a, value){
		username = value;
		init();
	});
}

inputUserName();

function init(){
	createPidFile();
	initPreference();
}